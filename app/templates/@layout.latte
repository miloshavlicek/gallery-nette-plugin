		<a n:href="Homepage:adminList">Admin List</a>
		<a n:href="Homepage:editGallery">Add Gallery</a>
		
		<div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message}</div>
		
		{include #content}
	</div>
</body>
</html>
